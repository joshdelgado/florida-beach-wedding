<div class="rte package-child-page">
  <section class="package-child-page__block package-child-page__block--tan">
    <div class="grid grid-limit">

      <div class="grid__item post-large--two-thirds">
        <div class="package-child-page__header">
          <h1 class="package-child-page__title">{{page.metafields.child-package.package-name}}</h1>
        </div>
        <div class="package-child-page__subheading">
          {{ page.content }}
        </div>
        <div class="package-child-page__image">
          <img src="{{page.metafields.child-package.package-image}}" />
        </div>
        <h2 class="package-child-page__heading">What is included with this package?</h2>
        {{ page.metafields.child-package.whats-included}}
      </div>

      <div class="grid__item post-large--one-third">
        <h4 class="package-child-page__list-heading">More Packages</h4>
        <div class="package-child-page__list">
          {% for package in page.metafields.child-package.more-packages-name %}
          <div class="package-child-page__list-item">
            <a
              href="{{routes.site_url}}{{page.metafields.child-package.more-packages-link[forloop.index0]}}">{{page.metafields.child-package.more-packages-name[forloop.index0]}}</a>
          </div>
          {% endfor%}
        </div>
      </div>

    </div>
    <div class="grid grid-limit">
      <div class="grid__item">
        {% if page.metafields.child-package.video-url %}
        <iframe width="1080" height="608" src="{{ page.metafields.child-package.video-url}}" frameborder="0"
          allowfullscreen=""></iframe>
        {% endif%}
      </div>
    </div>

    <div class="grid grid-limit package-child-page__box-row">
      <div class="grid__item post-large--one-third">
        <div class="border-box">
          <h4 class="border-box__title">TOTAL PARTICIPANTS</h4>
          {% if template contains 'page' and page.url == '/pages/rustic-romance-package' or page.url ==
          '/pages/tropical-distinctive-design-package' or page.url ==
          '/pages/floral-distinctive-design-package' or page.url ==
          '/pages/teal-distinctive-design-package' or page.url ==
          '/pages/anchors-away-distinctive-design-package' or page.url ==
          '/pages/classic-distinctive-design-package' or page.url ==
          '/pages/coral-distinctive-design-package' or page.url ==
          '/pages/natural-distinctive-design-package' or page.url ==
          '/pages/dusty-blue-distinctive-design-package' or page.url ==
          '/pages/beach-bliss-distinctive-design-package' or page.url ==
          '/pages/rustic-geometric-arch' or page.url ==
          '/pages/tropical-geometric-arch' or page.url ==
          '/pages/rustic-romance-package' or page.url ==
          '/pages/florida-destiny-package' or page.url ==
          '/pages/florida-nautical-knot-package' or page.url ==
          '/pages/starfish-distinctive-design-package'%}
          <span class="border-box__amount">2-100</span>
          <p class="border-box__text">For groups over 50, <a href="https://floridabeachweddings.com/contact-us">contact
              us</a> for possible additional charges.</p>
          {% endif%}

          {% if template contains 'page' and page.url == '/pages/natural-elopement-package' or page.url ==
          '/pages/natural-simply-florida-package' or page.url ==
          '/pages/tropical-florida-elopement-package' or page.url ==
          '/pages/florida-heart-in-the-sand'%}
          <span class="border-box__amount">2-6</span>
          <span class="border-box__text">(Includes Bride & Groom)</span>
          {% endif%}

          {% if template contains 'page' and page.url == '/pages/florida-beach-beginnings-package'%}
          <span class="border-box__amount">2-10</span>
          <span class="border-box__text">(Includes Bride & Groom)</span>
          {% endif%}
        </div>
      </div>

      <div class="grid__item post-large--one-third">
        <div class="border-box">
          <h4 class="border-box__title">Use Drop Down For Pricing</h4>
          {% render "location-dropdown" %}
          <p class="border-box__text">*Does not include any permit or parking fees that may be required</p>
          {% if template contains 'page' and page.url == '/pages/florida-beach-beginnings-package'%}
          <br>
          <p class="border-box__text">*Additional charges apply for Friday â€“ Sunday</p>
          {% endif%}
          {% if template contains 'page' and page.url == '/pages/natural-simply-florida-package'%}
          <br>
          <p class="border-box__text">*$200+ additional fee for Friday thru Sunday Weddings</p>
          {% endif%}
          {% if template contains 'page' and page.url == '/pages/florida-heart-in-the-sand'%}
          <br>
          <p class="border-box__text">*Not valid on Holidays or Holiday Weekends. Additional fees apply for popular
            dates.</p>
          {% endif%}
          {% if template contains 'page' and page.url == '/pages/natural-elopement-package' or page.url ==
          '/pages/tropical-florida-elopement-package'%}
          <br>
          <p class="border-box__text">*$200+ additional fee for Friday thru Sunday Weddings</p>
          {% endif%}
        </div>
      </div>
      <div class="grid__item post-large--one-third">
        <div class="border-box">
          <h4 class="border-box__title">RESERVING YOUR DATE<br>NON-REFUNDABLE DEPOSIT</h4>
          {% if template contains 'page' and page.url == '/pages/rustic-romance-package' or page.url ==
          '/pages/tropical-distinctive-design-package' or page.url ==
          '/pages/floral-distinctive-design-package' or page.url ==
          '/pages/teal-distinctive-design-package' or page.url ==
          '/pages/anchors-away-distinctive-design-package' or page.url ==
          '/pages/classic-distinctive-design-package' or page.url ==
          '/pages/coral-distinctive-design-package' or page.url ==
          '/pages/natural-distinctive-design-package' or page.url ==
          '/pages/dusty-blue-distinctive-design-package' or page.url ==
          '/pages/beach-bliss-distinctive-design-package' or page.url ==
          '/pages/rustic-geometric-arch' or page.url ==
          '/pages/tropical-geometric-arch' or page.url ==
          '/pages/rustic-romance-package' or page.url ==
          '/pages/florida-destiny-package' or page.url ==
          '/pages/florida-nautical-knot-package' or page.url ==
          '/pages/starfish-distinctive-design-package'%}
          <span class="border-box__amount">$500.00</span>
          {% endif%}

          {% if template contains 'page' and page.url == '/pages/natural-elopement-package' or page.url ==
          '/pages/natural-simply-florida-package' or page.url ==
          '/pages/tropical-florida-elopement-package' or page.url ==
          '/pages/florida-heart-in-the-sand' or page.url ==
          '/pages/florida-beach-beginnings-package' %}
          <span class="border-box__amount">$300.00</span>
          {% endif%}

          {% if template contains 'page' and page.url == '/pages/natural-elopement-package' or page.url ==
          '/pages/natural-simply-florida-package' or page.url ==
          '/pages/tropical-florida-elopement-package'%}
          <p class="border-box__text">This non-refundable deposit is required to reserve your date. This deposit will be
            subtracted from the package price. Any permit fees that may be required, will be due at time of reservation
            deposit.</p>
          {% endif%}

          {% if template contains 'page' and page.url == '/pages/florida-heart-in-the-sand'%}
          <p class="border-box__text">
            This package is for the couple getting married only, no other guests and a $300.00 deposit.
          </p>
          {% endif%}

        </div>
      </div>
    </div>
  </section>
  {% render "contact-form" %}

  {% if page.metafields.child-package.package-additional-info-image %}
  <section class="package-child-page__block package-child-page__block--tan">
    <div class="grid grid-limit">
      <div class="grid__item post-large--one-half">
        <img src="{{page.metafields.child-package.package-additional-info-image}}" alt="">
      </div>
      <div class="grid__item post-large--one-half">
        {{page.metafields.child-package.package-additional-info-text}}
      </div>
    </div>
  </section>
  {% endif%}

  <section class="package-child-page__block">
    <div class="grid grid-limit">
      <div class="grid__item package-child-page__section-three">
        <h3 class="package-child-page__section-three-title">{{page.metafields.child-package.package-footer-heading}}
        </h3>
        {% if page.metafields.child-package.package-image-footer %}
        <img class="package-child-page__section-three-image"
          src="{{page.metafields.child-package.package-image-footer}}" />
        {% endif%}
        <p class="package-child-page__section-three-text">{{page.metafields.child-package.package-footer-text}}</p>
      </div>
    </div>
  </section>
</div>


<!-- Javascript for dropdown -->

<script type="text/javascript">
  const priceDropdownSelect = document.getElementById('price-dropdown-select');

  priceDropdownSelect.addEventListener('change', (event) => {
    const packagePrice = document.getElementById('package-price');
    packagePrice.innerHTML = `<h4 class="package-child-page__package-cost">Package Cost</h4>` + event.target.value;
  });
</script>