<div class="rte locations-page">
    <div class="locations__intro">
        <div class="locations__intro-container">
            <div class="locations__intro-content">
                <h2 class="locations__subheading">{{page.metafields.locations.intro-box-heading}}</h2>
                <p class="locations__text">{{page.metafields.locations.intro-box-text}}</p>
            </div>
        </div>
    </div>
    <div class="locations__wrapper grid-limit">
        <div class="grid__item post-large--one-half locations__block">
            <div class="locations__content">
                <h2>{{page.metafields.east-coast.heading}}</h2>
                <p class="locations__text">{{page.metafields.east-coast.text}}</p>
            </div>
            {% for location in page.metafields.east-coast.location-name %}
            <div class="location-box"
                style="background-image: url( {{page.metafields.locations.east-coast-bg-images[forloop.index0]}}">
                <a class="location-box__inner"
                    href="{{routes.site_url}}{{page.metafields.east-coast.locations-link[forloop.index0]}}">
                    <div>
                        <h2 class="location-box__title">{{page.metafields.east-coast.location-name[forloop.index0]}}
                        </h2>
                        <span class="location-box__button">View Location</span>
                    </div>
                </a>
            </div>
            {% endfor %}
        </div>
        <div class="grid__item post-large--one-half locations__block">
            <div class="locations__content">
                <h2>{{page.metafields.west-coast.heading}}</h2>
                <p class="locations__text">{{page.metafields.west-coast.text}}</p>
            </div>
            {% for location in page.metafields.west-coast.location-name %}
            <div class="location-box"
                style="background-image: url( {{page.metafields.locations.west-coast-bg-images[forloop.index0]}}">
                <a class="location-box__inner"
                    href="{{routes.site_url}}{{page.metafields.west-coast.locations-link[forloop.index0]}}">
                    <div>
                        <h2 class="location-box__title">{{page.metafields.west-coast.location-name[forloop.index0]}}
                        </h2>
                        <span class="location-box__button">View Location</span>
                    </div>
                </a>
            </div>
            {% endfor %}
        </div>
    </div>
    <div class="grid grid-limit packages-page__block locations__tips-content">
        <div class="grid-item">
            <h2 class="locations__subheading">{{page.metafields.locations.locations-tips-heading}}</h2>
            <p class="locations__text">{{page.metafields.locations.locations-tips-text}}</p>
        </div>
    </div>
