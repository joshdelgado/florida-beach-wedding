{% if settings.enable_wide_layout %}
$siteWidth: 1340px;
{% else %}
$siteWidth: 1030px;
{% endif %}

// General

@import url('https://fonts.googleapis.com/css2?family=Sorts+Mill+Goudy:ital@0;1&display=swap');

.grid-limit {
  max-width: $siteWidth;
  margin: 0 auto;
}

.jds-button {
  display: inline-block;
  color: {{ settings.color_button_primary_text }};
  background-color: {{ settings.color_primary }};
  padding: 0.5rem 2rem;
  font-size: 1.25rem;
}

.main-content:after {
  padding: 0;
}

// Packages Page
.packages-page {

  .packages-page__block {
    margin-bottom: 6rem;
  }

  .packages-page__block--one {
    margin-bottom: 4rem;
  }

  .packages-page__block:last-child {
    margin-bottom: 0;
  }

  .packages-page__heading {
    text-align: center;
    font-style: italic;
  }

  .packages-page__block-two-image{
    display: inline-block;
    width: 100%;
  }

  .packages-page__footer-button-area{
    text-align: center;
    padding-top: 3rem;
  }
}

// Package Child
.package-child-page {
  .package-child-page__block{
    padding: 3rem 0;
  }
  .package-child-page__block--tan{
    background-color: #f9f4f7;
  }
  .package-child-page__header {
    border: 2px solid {{ settings.color_primary }};
    padding: 0.5rem;
    margin-bottom: 1rem;
  }
  .package-child-page__title {
    background-color: {{ settings.color_primary }};
    padding: 1.25rem 0 1rem;
    text-align: center;
    margin: 0;
  }
  .package-child-page__subheading {
    text-align: center;
    margin-bottom: 2rem;
  }
  .package-child-page__image{
    img {
      display:inline-block;
      width: 100%;
    }
  }
  .package-child-page__heading {
    text-align: center;
    margin: 2rem 0 1rem;
  }
  .package-child-page__list-heading { 
    background-color: {{ settings.color_primary }};
    text-align: center;
    margin: 0;
    padding: 0.5rem 0 0.25rem;
  }

  .package-child-page__list { 
    background-color: {{ settings.color_primary }};
    border-left: 1px solid {{ settings.color_primary }};
    border-right: 1px solid {{ settings.color_primary }};
    text-align: center;
  }
  .package-child-page__list-item {
    background-color: #fff;
    border-bottom: 1px solid {{ settings.color_primary }};
    transition: all 0.25s ease;

    a {
      width: 100%;
      display: block;
      text-align: center;
      padding: 0.5rem 0;
      color: #3dba9d;
    }

    &:hover {
      opacity: 0.7;

      a {
        color: #3dba9d;
      }
    }
  }
  .package-child-page__box-row {
  	margin-top: 2rem;
  }
  .package-child-page__section-three {
    text-align: center;

    .package-child-page__section-three-title {
      margin: 0;
    }
    .package-child-page__section-three-image {
      display: inline-block;
      margin: 2rem 0;
    }
    .package-child-page__section-three-text {}
  }
}

// Location Intro
.locations-page {
  p {
    font-size: 14px;
  }
  a {
    color: #3dba9d;
  }
  .locations__intro {
    .locations__intro-container {
      width: 60%;
      margin: 0 auto;
      padding: 4px;
      border: 3px solid #c5e0dc;
      max-width: 1080px;
      .locations__intro-content {
        padding: 30px;
        background-color: #c5e0dc;
      }
    }
  }
  .locations__wrapper {
    display: flex;
    margin-top: 4rem;
    .locations__block {
      display: flex;
      flex-direction: column;
      padding: 0 1rem;
      .locations__content {
        margin: 0 auto auto;
        padding-bottom: 2rem;
      }
    }
  }
  .locations__subheading {
    text-align: center;
    font-style: italic;
  }
  .locations__tips-content {
    padding: 0 1rem;
  }
}

// Location child

.location-child-page {
  .location-child__package-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    .location-child__package {
      width: 49%;
    }
    .location-child__package-image {
      position: relative;
      height: 250px;
      background-size: cover;
      background-position: center;
    }
  }
}


// Location Box
.location-box{
  position: relative;
  max-width: 500px;
  height: 250px;
  background-size: cover;
  background-position: center;
  padding: 1rem;
  text-align: center;
  margin-bottom: 1.5rem;

  .location-box__inner{
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 100%;
    width: 100%;
    background-color: rgba(0,0,0,0.3);
    transition: all 0.3s ease;
  }

  .location-box__title{
    font-family: 'Sorts Mill Goudy';
    letter-spacing: 3px;
    text-transform: uppercase;
    font-style: italic;
    color: #fff;
  }

  .location-box__button{
    color: {{ settings.color_button_primary_text }};
    background-color: {{ settings.color_primary }};
    padding: .5rem;
  }

  &:hover { 
    .location-box__inner {
      background-color: rgba(0,0,0,0.6);
    }
  }
}

//border-box
.border-box {
  background-color: #fff;
  border: 1px solid {{ settings.color_primary }};
  padding: 1rem;
  text-align: center;

  .border-box__title {
    margin: 0;
    font-family: 'Karla',sans-serif;
    text-transform: uppercase;
  }

  .border-box__amount {
    display: block;
    font-size: 28px;
    margin: 0.25rem 0;
  }
  
  .border-box__form {
	border: 1px solid {{ settings.color_primary }};
    padding: 0.25rem;
    margin: 1rem 0;
  }
  
  .border-box__select {
    background-color: {{settings.color_primary }};
    color: #333;
    cursor: pointer;
    font-weight: bold;
    width: 100%;
    border: 0;
    margin: 0;
    -moz-appearance: none;
    -webkit-appearance: none;
    appearance: none;
    border-radius: 0;
  }
  
  .border-box__text {
    font-size: 14px;
    line-height: 1.25;
    margin: 0;
  }
}

// About Page
.about-page {
  padding: 0 2rem;
  .about-page__container {
    display: flex;
    padding: 2rem 0;
  }
  .about-page__subtitle {
    padding: 2rem 0;
    text-align: center;
    margin: 0;
    font-family: 'Sorts Mill Goudy', serif;
    font-style: italic;
    font-size: 18px;
  }
  .about-page__image {
    width: 50%;
    height: 100%;
    margin: auto 2rem auto 0;
  }
  .about-page__link {
    color: #3dba9d;
  }
  .about-page__team-members {
    display: flex;
    justify-content: space-between;
    padding: 2rem 0;
    .about-page__member {
      margin-right: 1rem;
      &:last-of-type {
        margin-right: 0;
      }
      .about-page__member-image {
        max-width: 100%;
      }
      .about-page__member-info {
        .about-page__member-name {
          margin: 0;
          font-family: 'Sorts Mill Goudy', serif;
          font-style: italic;
          font-size: 16px;
        }
        .about-page__member-title {
          font-size: 12px;
          margin: 0;
        }
      }
    }
  }
  .about-page__testimonial-container {
    display: flex;
    justify-content: space-between;
    padding: 2rem 0;
    .about-page__testimonial {
      background: #f5f5f5;
      padding: 2rem;
      width: 49%;
      .about-page__testimonial-text {
        font-size: 12px;
        line-height: 1.5;
      }
      .about-page__testimonial-name {
        font-size: 11px;
        font-weight: bold;
      }
    }
  }
  .about-page__footer {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    padding: 2rem 0;
    .about-page__footer-text {
      margin: 2rem 0;
    }
  }
}


// Florida Beach Weddings Custom

.main-content__container {
  width: 80%;
  margin: 0 auto;
}

// Media Queries

@media screen and (max-width: 1024px) {
  .about-page {
    img {
      height: 100%;
      width: 100%;
    }
    .about-page__container {
      flex-wrap: wrap;
      justify-content: center;
    }
    .about-page__title {
      text-align: center;
      padding-top: 1.5rem;
    }
    .about-page__team-members {
      
      text-align: center;
      .about-page__member {
        width: auto;
        .about-page__member-image {
          height: auto;
        }
      }
    }
    .about-page__testimonial-container {
      flex-wrap: wrap;
      .about-page__testimonial {
        width: 100%;
        margin-bottom: 1rem;
        &:last-of-type {
          margin-bottom: 0;
        }
      }
    }
  }

  .locations-page {
    .location-box {
      max-width: 100%;
    }

    .locations__intro {
      .locations__intro-container {
        width: 95%;
      }
    }
  }
}

@media screen and (max-width: 767px) {
  .about-page {
  }

  .locations-page {
    padding: 0 1rem;
    .locations__wrapper {
      flex-direction: column;
    }
  }

  .location-child-page {
    .grid__item {
      padding: 0 2rem;
    }
    .location-child__package-container {
      .location-child__package {
        width: 100%;
      }
    }
  }
}

@media screen and (max-width: 568px) {
  .about-page {
    .about-page__image {
      width: 100%;
      margin: 0;
      }
    .about-page__team-members {
      flex-wrap: wrap;
      .about-page__member {
        margin-bottom: 1rem;
          &:last-of-type {
            margin-bottom: 0;
        }
      }
    }
  }

  .locations-page {
    .locations__block {
      padding: 0px 2.5rem;
    }
  }
}