{% if settings.enable_wide_layout %}
$siteWidth: 1340px;
{% else %}
$siteWidth: 1030px;
{% endif %}

// General

@import url('https://fonts.googleapis.com/css2?family=Sorts+Mill+Goudy:ital@0;1&display=swap');
@import url('/assets/ElegantIcons.scss.css');
@import url('/assets/ElegantIcons.svg');

.grid-limit {
  max-width: $siteWidth;
  margin: 0 auto;
}

.jds-button {
  display: inline-block;
  color: {{ settings.color_button_primary_text }};
  background-color: {{ settings.color_primary }};
  padding: 0.5rem 2rem;
  font-size: 1.25rem;
}

.main-content {
  a {
    color: #3dba9d;
  }
  p {
    font-size: 14px;
  }
  li {
    font-size: 14px;
    margin-bottom: 0;
  }
  h2 {
    font-size: 1.5rem;
    line-height: 1.3;
    font-family: 'Sorts Mill Goudy';
    font-style: italic;
    text-align: center;
  }
  h3 {
    font-style: italic;
    font-size: 1.3rem;
    text-align: center;
  }
}

.main-content:after {
  padding: 0;
}

// Packages Page
.packages-page {

  .packages-page__block {
    margin-bottom: 6rem;
  }

  .packages-page__block--one {
    margin-bottom: 4rem;
  }

  .packages-page__block:last-child {
    margin-bottom: 0;
  }

  .packages-page__heading {
    text-align: center;
    font-style: italic;
  }

  .packages-page__block-two-image{
    display: inline-block;
    width: 100%;
  }

  .packages-page__footer-button-area{
    text-align: center;
    padding-top: 3rem;
    a {
      color: #444444;
    }
  }
}

// Package Child
.package-child-page {
  .package-child-page__block{
    padding: 3rem 0;
  }
  .package-child-page__block--tan{
    background-color: #f9f4f7;
  }
  .package-child-page__header {
    border: 2px solid {{ settings.color_primary }};
    padding: 0.5rem;
    margin-bottom: 1rem;
  }
  .package-child-page__title {
    background-color: {{ settings.color_primary }};
    padding: 1.25rem 0 1rem;
    text-align: center;
    margin: 0;
  }
  .package-child-page__subheading {
    text-align: center;
    margin-bottom: 2rem;
  }
  .package-child-page__image{
    img {
      display:inline-block;
      width: 100%;
    }
  }
  .package-child-page__heading {
    text-align: center;
    margin: 2rem 0 1rem;
  }
  .package-child-page__list-heading {
    background-color: {{ settings.color_primary }};
    text-align: center;
    margin: 0;
    padding: 0.5rem 0 0.25rem;
  }

  .package-child-page__list {
    background-color: {{ settings.color_primary }};
    border-left: 1px solid {{ settings.color_primary }};
    border-right: 1px solid {{ settings.color_primary }};
    text-align: center;
  }
  .package-child-page__list-item {
    background-color: #fff;
    border-bottom: 1px solid {{ settings.color_primary }};
    transition: all 0.25s ease;

    a {
      width: 100%;
      display: block;
      text-align: center;
      padding: 0.5rem 0;
      color: #3dba9d;
    }

    &:hover {
      opacity: 0.7;

      a {
        color: #3dba9d;
      }
    }
  }
  .package-child-page__box-row {
  	margin-top: 2rem;
  }
  .package-child-page__section-three {
    text-align: center;

    .package-child-page__section-three-title {
      margin: 0;
    }
    .package-child-page__section-three-image {
      display: inline-block;
      margin: 2rem 0;
    }
    .package-child-page__section-three-text {}
  }
}

// Location Intro
.locations-page {
  .locations__intro {
    .locations__intro-container {
      width: 60%;
      margin: 0 auto;
      padding: 4px;
      border: 3px solid #c5e0dc;
      max-width: 1080px;
      .locations__intro-content {
        padding: 30px;
        background-color: #c5e0dc;
      }
    }
  }
  .locations__wrapper {
    display: flex;
    margin-top: 4rem;
    .locations__block {
      display: flex;
      flex-direction: column;
      padding: 0 1rem;
      .locations__content {
        margin: 0 auto auto;
        padding-bottom: 2rem;
      }
    }
  }
  .locations__tips-content {
    padding: 0 1rem;
  }
}

// Location child

.location-child-page {
  .locations__wrapper {
    margin-top: 2rem;
  }
  .location-child-page__block {
    .location-child-page__intro-container {
      margin-bottom: 1rem;
      .location-child-page__image {
        height: 600px;
        background-size: cover;
        background-position: center;
      }
    }
  }
  .location-child__package-header {
    display: flex;
    align-items: center;
    margin-top: 2rem;
    flex-wrap: wrap;
  }
  .location-child__package-container {
    display: flex;
    flex-wrap: wrap;
    // justify-content: space-between;
    margin: 2rem 0;
  }
  .location-child__package {
    width: calc((100% / 2) - 1rem);
    margin: .5rem;
    &:last-of-type {
      margin-bottom: 0;
    }
  }
  .location-child-package__heading {
    margin: 1rem 0;
  }
  .location-child__package-image {
    position: relative;
    height: 250px;
    background-size: cover;
    background-position: center;
  }
  .location-child__other-info {
    // margin: 2rem;
    // margin-left: 0;
  }
  .location-child__other-info-content {
    margin-top: 1rem;
  }
  .location-child__other-info-image-only {
    display: flex;
    justify-content: center;
    img {
      height: 300px;
    }
  }
}


// Location Box
.location-box{
  position: relative;
  max-width: 500px;
  height: 250px;
  background-size: cover;
  background-position: center;
  padding: 1rem;
  text-align: center;
  margin-bottom: 1.5rem;

  .location-box__inner{
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 100%;
    width: 100%;
    background-color: rgba(0,0,0,0.3);
    transition: all 0.3s ease;
  }

  .location-box__title{
    font-family: 'Sorts Mill Goudy';
    letter-spacing: 3px;
    text-transform: uppercase;
    font-style: italic;
    color: #fff;
  }

  .location-box__button{
    color: {{ settings.color_button_primary_text }};
    background-color: {{ settings.color_primary }};
    padding: .5rem;
  }

  &:hover {
    .location-box__inner {
      background-color: rgba(0,0,0,0.6);
    }
  }
}

//border-box
.border-box {
  background-color: #fff;
  border: 1px solid {{ settings.color_primary }};
  padding: 1rem;
  text-align: center;

  .border-box__title {
    margin: 0;
    font-family: 'Karla',sans-serif;
    text-transform: uppercase;
  }

  .border-box__amount {
    display: block;
    font-size: 28px;
    margin: 0.25rem 0;
  }

  .border-box__form {
	border: 1px solid {{ settings.color_primary }};
    padding: 0.25rem;
    margin: 1rem 0;
  }

  .border-box__select {
    background-color: {{settings.color_primary }};
    color: #333;
    cursor: pointer;
    font-weight: bold;
    width: 100%;
    border: 0;
    margin: 0;
    -moz-appearance: none;
    -webkit-appearance: none;
    appearance: none;
    border-radius: 0;
  }

  .border-box__text {
    font-size: 14px;
    line-height: 1.25;
    margin: 0;
  }
}

// Gray Box for Blurb
.beach-wedding-blurb {
  .beach-wedding-blurb__container {
    width: 80%;
    margin: 0 auto;
    padding: 4px;
    border: 3px solid #c5e0dc;
    max-width: 1080px;
    .beach-wedding-blurb__content {
      padding: 30px;
      background-color: #c5e0dc;
    }
    .beach-wedding-blurb__subheading {
      text-align: center;
    }
  }
}

// About Page
.about-page {
  padding: 0 2rem;
  .about-page__container {
    display: flex;
    padding-bottom: 2rem;
  }
  .about-page__image {
    width: 50%;
    height: 100%;
    margin: auto 2rem auto 0;
  }
  .about-page__team-members {
    display: flex;
    justify-content: space-between;
  }
  .about-page__member {
    margin-right: 1rem;
    &:last-of-type {
      margin-right: 0;
    }
  }
  .about-page__member-image {
    max-width: 100%;
  }
  .about-page__member-info {
  }
  .about-page__member-title {
    font-size: 12px;
    margin: 0;
  }
  .about-page__member-name {
    margin: 0;
    font-family: 'Sorts Mill Goudy', serif;
    font-style: italic;
    font-size: 16px;
  }
  .about-page__testimonial-container {
    display: flex;
    justify-content: space-between;
        flex-wrap: wrap;
    .about-page__testimonial {
      background: #f5f5f5;
      padding: 2rem;
      width: 49%;
      margin: 0 0 auto;
      margin-bottom: 1rem;
      position: relative;
      // &.icon_quotations_alt2:before {
      //   content: "\7c";
      //   font-size: 32px;
      //   font-family: 'ElegantIcons';
      //   left: 50%;
      //   position: absolute;
      //   top: -16px;
      //   background: #f5f5f5;
      //   margin-left: -16px;
      //   border-radius: 31px;
      //   z-index: 2;
      // }
      .about-page__testimonial-text {
        font-size: 12px;
        line-height: 1.5;
      }
      .about-page__testimonial-name {
        font-size: 11px;
        font-weight: bold;
      }
    }
  }
  .about-page__footer {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    padding: 2rem 0;
    .about-page__footer-image {
      margin-bottom: 1rem;
    }
    .about-page__footer-text {
      margin: 2rem 0;
    }
  }
}


// Blog Page
.blog-page {}
.blog-page__header {
  text-align: center;
}
.blog-page__title {
  font-size: 48px;
}
.blog-page__subtitle a {
  color: #000;
}
.blog-article {
  display: flex;
  justify-content: flex-start;
  flex-direction: column;
  width: 100%;
  color: #000;
  margin-bottom: 2rem;
  text-align: left;
}
.blog-article:hover {
  color: #000;
}
.blog-article__image {}
.blog-article__content {
  padding: 1.5rem;
  border: 1px solid #d8d8d8;
  color: #000;
}
.blog-article__title {
  font-size: 24px;
  margin: 0;
  text-align: left;
}
.blog-article__meta {
  display: block;
}
.blog-article__author,
.article__author {
  color: #3dba9d;
}
.blog-article__excerpt {
  margin: 1rem 0 0;
}
.article__header {
  margin: 0;
}
.article__meta {
  margin: 0 0 1rem 0;
}

// Wedding Photography page

.photography-page {
  margin-right: 2rem;
  .photography-page__title {
    margin: 1rem 2rem;
  }
  .photography-page__main-text-list {
    font-size: 14px;
  }
  .photography-page__intro-text {
    margin: 1rem 0;
  }
  .photography-page__gallery {
  }
  .photography-page__gallery-heading {
    text-align: center;
  }
  .photography-page__image-list {
    display: flex;
    flex-wrap: wrap;
  }
  .photography-page__image {
    height: 200px;
    flex-grow: 1;
    list-style-type: none;
    margin-bottom: 0;
    &:last-child {
      flex-grow: 10;
    }
    img {
      max-height: 100%;
      min-width: 100%;
      object-fit: cover;
      vertical-align: bottom;
    }
  }
}

// FAQs
.faqs-page {

  ul {
    list-style: none;
    padding: 0;
    margin: 0 auto;
    padding: 0 2rem;
    max-width: 700px;
  
    .inner {
        overflow: hidden;
        display: none;
        border: 1px solid #c5e0dc;
        border-top: none;
        margin: 0;
        padding: 1rem;
      
        &.show {
          /*display: block;*/
        }
    }
  
    li {
        margin: .5em 0;
        list-style-type: none;
      
        a.toggle {
            width: 100%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: #c5e0dc;
            color: #333;
            padding: .75em;
            transition: all .5s ease-in-out;
          
            &:hover {
                background: #c5e0dc;
            }
            &:after {
              content: "+";
              font-size: 11px;
              color: #c5e0dc;
              height: 20px;
              width: 20px;
              text-align: center;
              border-radius: 50%;
              background-color: #8c8c8b;
              min-width: 20px;
            }
        }
    }
}


  .faqs__images {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 0;
    margin-left: 2rem;
  }

  .faqs__questions {
      max-width: 80%;
      margin: auto;
  }
}

// Wedding Photography page
.photography-page {
  .photography-page__intro-image {
    height: 500px;
    background-size: cover;
    background-position: center;
  }
}

.article__image-wrapper.supports-js .article__image {
  position: relative !important;
}

// Media Queries

@media screen and (max-width: 1024px) {
  .about-page {
    img {
      height: 100%;
      width: 100%;
    }
    .about-page__image {
      margin: auto 0;
      margin-right: 1rem;
    }
    .about-page__title {
      text-align: center;
      padding-top: 1.5rem;
    }
    .about-page__team-members {
      text-align: center;
    }
    .about-page__member {
      width: auto;
    }
    .about-page__member-image {
      height: auto;
    }
    .about-page__testimonial-container {
      .about-page__testimonial {
        width: 100%;
        margin-bottom: 1rem;
        &:last-of-type {
          margin-bottom: 0;
        }
      }
    }
  }

  .locations-page {
    .location-box {
      max-width: 100%;
    }

    .locations__intro {
      .locations__intro-container {
        width: 95%;
      }
    }
  }

  .location-child-page {
    .location-child-page__block {
      margin-right: 2rem;
      .beach-wedding-blurb {
        margin-left: 2rem;
        .beach-wedding-blurb__container {
          width: 100%;
        }
      }
      .location-child__package-header {
      }
    }
    .location-child__package-container {
      margin: 0 2rem;
    }
  }
}

@media screen and (max-width: 767px) {
  .about-page {
    .about-page__container {
      flex-wrap: wrap;
      justify-content: center;
    }
    .about-page__welcome {
      margin-top: 1rem;
    }
    .about-page__member-image {
      max-width: 225px;
    }
  }

  .locations-page {
    padding: 0 1rem;
    .locations__wrapper {
      flex-direction: column;
    }
  }

  .location-child-page {
    .location-child-page__intro-container {
      .location-child-page__image {
        margin-bottom: 2rem;
      }
    }
    .location-child__package-container {
      .location-child__package {
        width: 100%;
      }
    }
  }

  .photography-page {
    .photography-page__image {
      height: 150px;
    }
  }
}

@media screen and (max-width: 568px) {
  .about-page {
    .about-page__image {
      width: 100%;
      margin: 0;
      }
    .about-page__team-members {
      flex-wrap: wrap;
      .about-page__member {
        margin: .5rem auto;
          &:last-of-type {
            margin-bottom: 0;
        }
      }
    }
  }

  .locations-page {
    .locations__block {
      padding: 0px 2.5rem;
    }
  }
}

@media screen and (min-width: 1024px) {
  .location-child-page {
    .location-child-page__block {
      .location-child-page__intro-container, .location-child__package-header {
        .grid__item {
          &:first-of-type {
            padding-left: 0;
          }
        }
      }
    }
  }
}
